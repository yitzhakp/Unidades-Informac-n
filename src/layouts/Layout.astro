---
import Header from "../components/Header.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="public/logo_IEA.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions/>
	</head>
	<body class="dark h-screen">
		<div
			class="absolute top-0 z-[-2] h-screen w-screen bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
		>
		</div>
		<Header />
		<slot  />
	</body>
</html>

<style is:global>
	:root {
		color-scheme: light dark;
	}
	html {
		background-color: rgb(10,10,10);
		font-family: system-ui, sans-serif;
	}

	body {
		display: flex;
		flex-direction: column;
		align-items: center;
	}
</style>
